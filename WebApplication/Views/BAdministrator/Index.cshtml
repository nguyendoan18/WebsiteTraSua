<!DOCTYPE html>
<html lang="en"
      class="light-style layout-menu-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="../assets/"
      data-template="vertical-menu-template-free">
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Quản lý trà sữa</title>

    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/Content/Image_web/logo-dsnguyen.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <!-- Icons. Uncomment required icon fonts -->
    <link rel="stylesheet" href="~/Content/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/Content/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/Content/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/Content/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/Content/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <link rel="stylesheet" href="~/Content/vendor/libs/apex-charts/apex-charts.css" />

    <!-- Page CSS -->
    <!-- Helpers -->
    <script src="~/Content/vendor/js/helpers.js"></script>

    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain global vars & default theme options, Set your preferred theme option in this file.  -->
    <script src="~/Content/js/config.js"></script>
</head>

<body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->

            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="app-brand demo">
                    <a href="/BAdministrator" class="app-brand-link">
                        <img width="40%" src="~/Content/Image_web/logo-dsnguyen.png" alt="Alternate Text" />
                        <span class="app-brand-text demo menu-text fw-bolder ms-2">DSNGUYEN</span>
                    </a>

                    <a href="/BAdministrator" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
                        <i class="bx bx-chevron-left bx-sm align-middle"></i>
                    </a>
                </div>

                <div class="menu-inner-shadow"></div>

                <ul class="menu-inner py-1">
                    <!-- Dashboard -->
                    <li class="menu-item">
                        <a href="/BAdministrator/Index/?namepage=HomePage" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            <div data-i18n="Analytics">Trang chủ</div>
                        </a>
                    </li>

                    <!-- Layouts -->
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-layout"></i>
                            <div data-i18n="Layouts">Sản phẩm</div>
                        </a>

                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=ProductPortfolio" class="menu-link">
                                    <div data-i18n="Without menu">Danh mục sản phẩm</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=CreateProducts" class="menu-link">
                                    <div data-i18n="Without navbar">Tạo mới Sản phẩm</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=EditProducts" class="menu-link">
                                    <div data-i18n="Container">Cập nhật Sản phẩm</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=ShowProducts" class="menu-link">
                                    <div data-i18n="Fluid">Hiển thị Sản phẩm</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=DeleteProducts" class="menu-link">
                                    <div data-i18n="Blank">Sản phẩm đã xóa</div>
                                </a>
                            </li>
                        </ul>
                    <li class="menu-item">
                        <a href="javascript:void(0);" class="menu-link menu-toggle">
                            <i class="menu-icon tf-icons bx bx-lock-open-alt"></i>
                            <div data-i18n="Authentications">Người dùng</div>
                        </a>
                        <ul class="menu-sub">
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=CreateAdministrators" class="menu-link" target="_blank">
                                    <div data-i18n="Basic">Tạo mới Tài khoản</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=EditAdministrators" class="menu-link" target="_blank">
                                    <div data-i18n="Basic">Cập nhật Tài khoản</div>
                                </a>
                            </li>
                            <li class="menu-item">
                                <a href="/BAdministrator/Index/?namepage=ShowAdministrators" class="menu-link" target="_blank">
                                    <div data-i18n="Basic">Hiển thị Tài khoản</div>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </aside>
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->

                <nav class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme"
                     id="layout-navbar">
                    <div class="layout-menu-toggle navbar-nav align-items-xl-center me-3 me-xl-0 d-xl-none">
                        <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                            <i class="bx bx-menu bx-sm"></i>
                        </a>
                    </div>

                    <div class="navbar-nav-right d-flex align-items-center" id="navbar-collapse">
                        <!-- Search -->
                        <div class="navbar-nav align-items-center">
                            <div class="nav-item d-flex align-items-center">
                                <i class="bx bx-search fs-4 lh-0"></i>
                                <input type="text"
                                       class="form-control border-0 shadow-none"
                                       placeholder="Tìm kiếm Sản phẩm..."
                                       aria-label="Search..." />
                            </div>
                        </div>
                        <!-- /Search -->

                        <ul class="navbar-nav flex-row align-items-center ms-auto">
                            <!-- User -->
                            <li class="nav-item navbar-dropdown dropdown-user dropdown">
                                <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
                                    <div class="avatar avatar-online">
                                        <img src="~/Content/Image_web/user-image.png" class="w-px-40 h-auto rounded-circle" />
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0 me-3">
                                                    <div class="avatar avatar-online">
                                                        <img src="~/Content/Image_web/user-image.png" class="w-px-40 h-auto rounded-circle" />
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-semibold d-block">John Doe</span>
                                                    <small class="text-muted">Đang hoạt động</small>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <!--/ User -->
                        </ul>
                    </div>
                </nav>
               

                @Html.Partial(""+ ViewData["ActionPage"])
            </div>
            <!-- Overlay -->
            <div class="layout-overlay layout-menu-toggle"></div>
        </div>
        <!-- / Layout wrapper -->
        <!-- Core JS -->
        <!-- build:js assets/vendor/js/core.js -->
        <script src="~/Content/vendor/libs/jquery/jquery.js"></script>
        <script src="~/Content/vendor/libs/popper/popper.js"></script>
        <script src="~/Content/vendor/js/bootstrap.js"></script>
        <script src="~/Content/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>

        <script src="~/Content/vendor/js/menu.js"></script>
        <!-- endbuild -->
        <!-- Vendors JS -->
        <script src="~/Content/vendor/libs/apex-charts/apexcharts.js"></script>

        <!-- Main JS -->
        <script src="~/Content/js/main.js"></script>

        <!-- Page JS -->
        <script src="~/Content/js/dashboards-analytics.js"></script>
        <!-- Place this tag in your head or just before your close body tag. -->
        <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
